{
	"manifest_version": 2,
	"name": "xlinkBook",
	"description": "xlinkBook",
	"version": "1.0",
	"permissions": [
		"storage"
	],
	"icons": { 
		"16": "img/icon16.png",
		"48": "img/icon48.png",
		"128": "img/icon128.png" 
	},
	"background": {
        "scripts": ["event.js"],
        "persistent": false
    },
	"browser_action": {
		"default_icon": {                    
			"19": "img/icon48.png",          
			"38": "img/icon48.png"          
		},
		"default_popup": "popup.html"
	},
	"content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
	"web_accessible_resources": [
		"img/icon128.png"
	],
	"permissions": [
        "tabs", 
        "http://*/*", 
        "https://*/*",
        "http://localhost/"
    ]}
